{
	"name": "logical-english-vscode",
	"displayName": "Logican English",
	"description": "A language plugin for the logical programming language Logical English.",
	"author": {
		"name": "Nikolai Merritt",
		"url": "https://github.com/nikolaimerritt/"
	},
	"icon": "orange-circle.png",
	"license": "MIT",
	"version": "0.1.6",
	"homepage": "https://github.com/nikolaimerritt/LogicalEnglish",
	"repository": {
		"type": "git",
		"url": "https://github.com/nikolaimerritt/LogicalEnglish.git"
	},
	"publisher": "nikolaimerritt",
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"logical",
		"english",
		"logical english",
		"le",
		"debuggers",
		"formatters",
		"linters",
		"programming languages",
		"languages"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:logical-english"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "logical-english",
				"aliases": [
					"Logical English",
					"logical-english",
					"logical english",
					"logical_english",
					"le"
				],
				"extensions": [
					".le"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "logical-english",
				"scopeName": "source.logical-english",
				"path": "./syntaxes/logical-english.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "logical-english-extension.sayHello",
				"title": "Say Hello :)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"esbuild": "^0.14.49",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"@types/vscode": "^1.67.0"
	}
}
